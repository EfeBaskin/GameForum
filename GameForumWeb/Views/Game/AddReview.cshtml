@model GameForumWeb.Models.Review

@{
    ViewBag.Title = "Add Review";
    Layout = "~/Views/Shared/_GameForumLayout.cshtml";
}

<h2>Add a Review</h2>

@using (Html.BeginForm("AddReview", "Game", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("User")
        @Html.DropDownList("UserId", (SelectList)ViewBag.Users, "Select User", new { @class = "form-control" }) // Bind to userId
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.GameId, "Game")
        @Html.DropDownListFor(x => x.GameId, (SelectList)ViewBag.Games, "Select Game", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ReviewContent)
        @Html.TextBoxFor(x => x.ReviewContent, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Add Review</button>
}
